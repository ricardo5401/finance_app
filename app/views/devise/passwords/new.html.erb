<div class="container-fluid">
  <div class="row">
    <% path = image_path("carreteras.jpg") %>
    <div class="full-bg-img" style="background: url('<%= path  %>') no-repeat center center fixed"></div>
    <div class="col-md-12">
      <center>
        <div class="form-container">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="actions" style="margin-top: 10px; margin-bottom: 10px">
                <%= f.submit "Reestablecer contraseÃ±a", class: "btn btn-primary full-width" %>
              </div>
            <% end %>
            <div class="errors">
              <%= devise_error_messages! %>
            </div>
            <%= render "devise/shared/links" %>
        </div>
      </center>
    </div>
  </div>
</div>